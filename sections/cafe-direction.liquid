<div class="cafe-directions-page">
  <div class="page-width">    
    <div class="cafe-directions-page-container">
      <div class="cafe-directions-page-left">
        <h1 class="cafe-directions-title">{{ section.settings.left_header }}</h1>
        <p class="cafe-directions-sub">{{ section.settings.left_text }}</p>
        <div class="cafe-directions-hours-container">
          <div class="cafe-directions-hours-inner">
            <h3 class="cafe-directions-hours-title">{{ section.settings.hours_left_title }}</h3>
            <p class="cafe-directions-hours-sub">{{ section.settings.hours_left_text }}</p>
          </div>
          <div class="cafe-directions-hours-inner">
            <h3 class="cafe-directions-hours-title">{{ section.settings.hours_right_title }}</h3>
            <p class="cafe-directions-hours-sub">{{ section.settings.hours_right_text }}</p>
          </div>
        </div>
        <h2 class="cafe-directions-address">{{ section.settings.address}}</h2>
        <div class="cafe-directions-icon-holder">
          <div class="cafe-directions-icon">
            <svg width="20" height="16" viewBox="0 0 20 16" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M1 4L8.8906 9.2604C9.5624 9.7083 10.4376 9.7083 11.1094 9.2604L19 4M3 15H17C18.1046 15 19 14.1046 19 13V3C19 1.89543 18.1046 1 17 1H3C1.89543 1 1 1.89543 1 3V13C1 14.1046 1.89543 15 3 15Z" stroke="#8A9381" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <a href="mailto:{{ section.settings.mail }}">{{ section.settings.mail }}</a>
        </div>
        <div class="cafe-directions-icon-holder">
          <div class="cafe-directions-icon">
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M1 3C1 1.89543 1.89543 1 3 1H6.27924C6.70967 1 7.09181 1.27543 7.22792 1.68377L8.7257 6.17721C8.8831 6.64932 8.6694 7.16531 8.2243 7.38787L5.96701 8.5165C7.06925 10.9612 9.0388 12.9308 11.4835 14.033L12.6121 11.7757C12.8347 11.3306 13.3507 11.1169 13.8228 11.2743L18.3162 12.7721C18.7246 12.9082 19 13.2903 19 13.7208V17C19 18.1046 18.1046 19 17 19H16C7.71573 19 1 12.2843 1 4V3Z" stroke="#8A9381" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <a href="tel:{{ section.settings.phone }}">{{ section.settings.phone }}</a>
        </div>
        <a href="{{ section.settings.button_url }}" target="_blank" download>
          <button class="btn cafe-directions-btn">
            <span class="cafe-directions-btn-text">{{ section.settings.button_label }}</span>
            <span class="cafe-directions-btn-icon">
              <svg width="16" height="20" viewBox="0 0 16 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M5 3H3C1.89543 3 1 3.89543 1 5V17C1 18.1046 1.89543 19 3 19H13C14.1046 19 15 18.1046 15 17V5C15 3.89543 14.1046 3 13 3H11M5 3C5 4.10457 5.89543 5 7 5H9C10.1046 5 11 4.10457 11 3M5 3C5 1.89543 5.89543 1 7 1H9C10.1046 1 11 1.89543 11 3M8 10H11M8 14H11M5 10H5.01M5 14H5.01" stroke="#242721" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </span>
          </button>
        </a>
      </div>

      <div class="cafe-directions-page-right">
        <a href="{{ section.settings.map_url }}" target="_blank">
          <picture class="cafe-directions-map-image">
            <source srcset="https://cdn.shopify.com/s/files/1/0277/5518/4198/files/cafe-directions-map_new.jpg" media="(min-width: 480px)">
            <source srcset="https://cdn.shopify.com/s/files/1/0277/5518/4198/files/farmers-market-map-mobile_cd5d6a1b-1112-4a9b-8fd9-335140efca7c.jpg">
            <img src="{{ section.settings.map_image | img_url: 'master' }}">
          </picture>
        </a>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Cafe Directions",
  "class": "cafe-direction",
  "settings": [
    {
      "type": "header",
      "content": "Left Content"
    },
    {
      "type": "text",
      "id": "left_header",
      "label": "Left Header",
      "default": "Cafe directions"
    },
    {
      "type": "text",
      "id": "left_text",
      "label": "Left Text",
      "default": "Located off 1-20 at Exit 114, just south of Madison"
    },
	{
      "type": "text",
      "id": "hours_left_title",
      "label": "Hours Left title",
      "default": "Breakfast Hours"
    },
	{
      "type": "text",
      "id": "hours_left_text",
      "label": "Hours Left Text",
      "default": "Monday - Saturday | 7am - 10:30am"
    },
    {
      "type": "text",
      "id": "hours_right_title",
      "label": "Hours Right title",
      "default": "Lunch Hours"
    },
	{
      "type": "text",
      "id": "hours_right_text",
      "label": "Hours Right Text",
      "default": "Monday - Saturday | 11am - 3pm"
    },
	{
      "type": "html",
      "id": "address",
      "label": "Address",
      "default": "2610 Eatonton Highway <br>Madison, GA 30650 United States"
    },
	{
      "type": "text",
      "id": "mail",
      "label": "Email address",
      "default": "cafe@farmviewmarket.com"
    },
	{
      "type": "text",
      "id": "phone",
      "label": "Phone number",
      "default": "678-729-1458"
    },
	{
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "View cafe menu"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button url"
    },
	{
      "type": "header",
      "content": "Right Content"
    },
    {
      "type": "url",
      "id": "map_url",
      "label": "Map Link"
    },
	{
      "type": "image_picker",
      "id": "map_image",
      "label": "Map Image"
    }
  ]
}
{% endschema %}