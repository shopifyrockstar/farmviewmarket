<div class="page-width">
    <div class="grid">
      <div class="grid__item medium-up--five-sixths medium-up--push-one-twelfth">
        <div class="rte">
          <h2 class="page-content">{{ section.settings.content_title | escape }}</h2>
          {{ section.settings.content }}

          <div class="page-white-box">
              <h2>{{ section.settings.call_us | escape }}</h2>
              <p>{{ section.settings.time_available | escape }}</p>
              <div class="page-white-box-flex"><svg fill="none" height="20" viewbox="0 0 20 20" width="20" xmlns="http://www.w3.org/2000/svg"><path d="m1 3c0-1.10457.89543-2 2-2h3.27924c.43043 0 .81257.27543.94868.68377l1.49778 4.49344c.1574.47211-.0563.9881-.5014 1.21066l-2.25729 1.12863c1.10224 2.4447 3.07179 4.4143 5.51649 5.5165l1.1286-2.2573c.2226-.4451.7386-.6588 1.2107-.5014l4.4934 1.4978c.4084.1361.6838.5182.6838.9487v3.2792c0 1.1046-.8954 2-2 2h-1c-8.28427 0-15-6.7157-15-15z" stroke="#8a9381" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"></path></svg>
              <p>{{ section.settings.phone_number | escape }}</p>
              </div>
              <div class="page-white-box-flex"><svg width="20" height="16" viewbox="0 0 20 16" fill="none" xmlns="http://www.w3.org/2000/svg"> <path d="M1 4L8.8906 9.2604C9.5624 9.7083 10.4376 9.7083 11.1094 9.2604L19 4M3 15H17C18.1046 15 19 14.1046 19 13V3C19 1.89543 18.1046 1 17 1H3C1.89543 1 1 1.89543 1 3V13C1 14.1046 1.89543 15 3 15Z" stroke="#8A9381" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path> </svg>
              <p><a href="mailto:orders@farmviewmarket.com" target="_blank" rel="noopener noreferrer">{{ section.settings.email_us | escape }}</a></p>
              </div>
              <p class="page-white-box-pl">{{ section.settings.help_us | escape }}</p>
            </div>
          
        </div>
      </div>
    </div>
  </div>

{% schema %}
  {
    "name": "Refund policy inner",
    "settings": [
      {
        "type": "text",
        "id": "content_title",
        "label": "content title"
      },
      {
        "type": "html",
        "id": "content",
        "label": "content"
      },
      {
        "type": "text",
        "id": "call_us",
        "label": "Call Us"
      },
      {
        "type": "text",
        "id": "time_available",
        "label": "Time"
      },
      {
        "type": "text",
        "id": "phone_number",
        "label": "Phone Number"
      },
      {
        "type": "text",
        "id": "email_us",
        "label": "Contact email"
      },
      {
        "type": "text",
        "id": "help_us",
        "label": "Help us"
      }
    ]
  }
{% endschema %}