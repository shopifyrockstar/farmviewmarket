<div style="padding: 200px 0; min-height: 90vh;{% if section.settings.section-background %}background:url({{ section.settings.section-background | img_url: 'master' }})no-repeat{% endif %}; background-size: cover;">
  <div class="container">
	<div class="row">
  		<div class="col-sm-12 align-middle">
      		{% if section.settings.section-heading != blank %}
            	<h1 class="section-heading">{{ section.settings.section-heading }}</h1>
            {% endif %}
            {% if section.settings.section-subheading != blank %}
            	<h4 class="section-subheading">{{ section.settings.section-subheading }}</h4>
            {% endif %}
                  {% if section.settings.view-btn != blank %}
                  <a class="btn hero__btn" href="{{ section.settings.view-btn-link }}">{{ section.settings.view-btn }}</a>
                  {% endif %}
                  {% if section.settings.sec-view-btn != blank %}
                  <a class="btn hero__btn btn_alt" href="{{ section.settings.sec-view-btn-link }}">{{ section.settings.sec-view-btn }}</a>
                  {% endif %}
      	</div>
  	</div>
  </div>
</div>
{% schema %}
{
"name": "404-section",
"settings": [
{
	"id": "section-background",
	"type": "image_picker",
	"label": "Background Image"
},
{
"id": "section-heading",
"type": "text",
"label": "Heading"
},
{
"id": "section-subheading",
"type": "text",
"label": "Subheading"
},
{
"id": "view-btn-link",
"type": "url",
"label": "Button URL"
},
{
"id": "view-btn",
"type": "text",
"label": "Button name"
},
{
"id": "sec-view-btn-link",
"type": "url",
"label": "Button URL"
},
{
"id": "sec-view-btn",
"type": "text",
"label": "Button name"
}
]
}
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

