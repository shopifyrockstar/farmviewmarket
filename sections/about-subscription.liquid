<div class="content-wrapper">
  <div class="text-wrapper">
    <h2>{{ section.settings.main_header }}</h2>
    <p>{{ section.settings.text_1 }}</p>
  </div>
  <div class="beneficial-wrapper">    
  </div>
  
  <div class="product-promo--featured">
    <h4>{{ section.settings.sub_header }}</h4>
    <ul class="grid grid--uniform grid--view-items">
      <li class="grid__item small--one-whole medium-up--one-third">
        <div class="grid-view-item product-card">
          <img src="{{ section.settings.image_1 | img_url: '105x' }}">
          <div class="h6 grid-view-item__title product-card__title" aria-hidden="true">
          	{{ section.settings.header_1 }}
          </div>
          <div class="product-card__content">
          	{{ section.settings.content_1 }}
          </div>
        </div>
      </li>
      <li class="grid__item small--one-whole medium-up--one-third">
        <div class="grid-view-item product-card">
          <img src="{{ section.settings.image_2 | img_url: '105x' }}">
          <div class="h6 grid-view-item__title product-card__title" aria-hidden="true">
          	{{ section.settings.header_2 }}
          </div>
          <div class="product-card__content">
          	{{ section.settings.content_2 }}
          </div>
        </div>
      </li>
      <li class="grid__item small--one-whole medium-up--one-third">
        <div class="grid-view-item product-card">
          <img src="{{ section.settings.image_3 | img_url: '105x' }}">
          <div class="h6 grid-view-item__title product-card__title" aria-hidden="true">
          	{{ section.settings.header_3 }}
          </div>
          <div class="product-card__content">
          	{{ section.settings.content_3 }}
          </div>
        </div>
      </li>
    </ul>
  </div>
  
  
</div>
