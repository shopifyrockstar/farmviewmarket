
<div class="events-page event-map-section">
  <div class="article-events-inner" style="background-image: url('{{ section.settings.left_img | img_url: 'master' }}}'), url('{{ section.settings.right_img | img_url: 'master' }}');
    background-repeat: no-repeat, no-repeat;">
    <div class="page-width page-width-article-events events-content">
      <div class="rte">
        <h2>{{ section.settings.main_title }}</h2>
         {{ section.settings.text }}
      </div>
    </div>

   <div class="article-events-map-image event-map-text-section">
     <a href="{{ section.settings.button_link }}" target="_blank">
      <img src="{{ section.settings.map_image | img_url: 'master' }}" class="map_image">
     <div class="map_block">
       <div class="map_content-block">
         <p class="map_title">{{ section.settings.map_title | escape }}</p>
         {{ section.settings.address_name }}
         <span class="article-events-map-image">
           {{ section.settings.button_label }}
         </span>
       </div>
       <div class="map-icon">
         <img src="{{ section.settings.map_icone | img_url: 'small' }}">
       </div>
     </div>
     </a>
     
    </div>
    <div class="article-events-gallery-image">
      <img src="{{ section.settings.banner_image | img_url: 'master' }}">
    </div>
  </div>
  
</div>

