<div class="cafemenu-containter breakfast_panel">
  <div class="page-width">
    
	<div class="cafemenu_time">
      <ul>
        <li class="breakfast active_time">Breakfast</li>
        <li class="lunch">Lunch</li>
        <li class="dinner">Dinner</li>
      </ul>
    </div>

    {% assign category_count = 0 %}
    <div class="cafemenu_tabs" id="cafemenu_tabs_desktop">
      {% for block in section.blocks %}
        {% if block.type == 'product_category' %}
      	{% assign category_count = category_count | plus: 1 %}
      
        <div class="cafemenu_category_tab {% if category_count == 1 %}active_category_tab{% endif %}
              {% if block.settings.breakfast == true %}breakfast_category_tab{% endif %}
              {% if block.settings.lunch == true %}lunch_category_tab{% endif %}
              {% if block.settings.dinner == true %}dinner_category_tab{% endif %}"
             data-handle={{ block.settings.category_handle }}
          >
            {% if block.settings.category_image != blank %}
                <img src="{{ block.settings.category_image | img_url: 'master' }}">
            {% else %}
                <img src="//cdn.shopify.com/s/images/admin/no-image-large.gif">
            {% endif %}  	
            <h3 class="cafemenu_tab_title">
              {{ block.settings.category_title }}
            </h3>
          </div>
        
        {% endif %}
      {% endfor %}
    </div>
    <div class="cafemenu_tabs-wrapper_mobile_breakfast">
    <div class="cafemenu_tabs" id="cafemenu_tabs_mobile_breakfast">
      {% for block in section.blocks %}
        {% if block.type == 'product_category' %}
      	{% assign category_count = category_count | plus: 1 %}
      	{% if block.settings.breakfast == true %}
        <div class="cafemenu_category_tab {% if category_count == 1 %}active_category_tab{% endif %}
              {% if block.settings.breakfast == true %}breakfast_category_tab{% endif %}
              {% if block.settings.lunch == true %}lunch_category_tab{% endif %} 
              {% if block.settings.dinner == true %}dinner_category_tab{% endif %}"
             data-handle={{ block.settings.category_handle }}
          >
            {% if block.settings.category_image != blank %}
                <img src="{{ block.settings.category_image | img_url: 'master' }}">
            {% else %}
                <img src="//cdn.shopify.com/s/images/admin/no-image-large.gif">
            {% endif %}  	
            <h3 class="cafemenu_tab_title">
              {{ block.settings.category_title }}
            </h3>
          </div>
        {% endif %}
        {% endif %}
      {% endfor %}
    </div>
    </div>
    <div class="cafemenu_tabs-wrapper_mobile_lunch">
    <div class="cafemenu_tabs" id="cafemenu_tabs_mobile_lunch">
      {% for block in section.blocks %}
        {% if block.type == 'product_category' %}
      	{% assign category_count = category_count | plus: 1 %}
      	{% if block.settings.lunch == true %}
        <div class="cafemenu_category_tab {% if category_count == 1 %}active_category_tab{% endif %}
              {% if block.settings.breakfast == true %}breakfast_category_tab{% endif %}
              {% if block.settings.lunch == true %}lunch_category_tab{% endif %}
              {% if block.settings.dinner == true %}dinner_category_tab{% endif %}"
             data-handle={{ block.settings.category_handle }}
          >
            {% if block.settings.category_image != blank %}
                <img src="{{ block.settings.category_image | img_url: 'master' }}">
            {% else %}
                <img src="//cdn.shopify.com/s/images/admin/no-image-large.gif">
            {% endif %}  	
            <h3 class="cafemenu_tab_title">
              {{ block.settings.category_title }}
            </h3>
          </div>
        {% endif %}  	
        {% endif %}
      {% endfor %}
    </div>
    </div>
    <div class="cafemenu_tabs-wrapper_mobile_dinner">
    <div class="cafemenu_tabs" id="cafemenu_tabs_mobile_dinner">
      {% for block in section.blocks %}
        {% if block.type == 'product_category' %}
      	{% assign category_count = category_count | plus: 1 %}
      	{% if block.settings.dinner == true %}
        <div class="cafemenu_category_tab {% if category_count == 1 %}active_category_tab{% endif %}
              {% if block.settings.breakfast == true %}breakfast_category_tab{% endif %}
              {% if block.settings.lunch == true %}lunch_category_tab{% endif %}
              {% if block.settings.dinner == true %}dinner_category_tab{% endif %}"
             data-handle={{ block.settings.category_handle }}
          >
            {% if block.settings.category_image != blank %}
                <img src="{{ block.settings.category_image | img_url: 'master' }}">
            {% else %}
                <img src="//cdn.shopify.com/s/images/admin/no-image-large.gif">
            {% endif %}  	
            <h3 class="cafemenu_tab_title">
              {{ block.settings.category_title }}
            </h3>
          </div>
        {% endif %}  	
        {% endif %}
      {% endfor %}
    </div>
    </div>
    {% assign type_count = 0 %}
    <div class="cafemenu_products breakfast_products">
      {% for block in section.blocks %}
        {% if block.type == 'product_category' %}
          {% assign type_count = type_count | plus: 1 %}
          {% if type_count == 1 %}
            <div class="cafemenu_category_wrapper active_category_wrapper {{block.settings.category_handle}}
              {% if block.settings.breakfast == true %}breakfast_category_wrapper{% endif %}
              {% if block.settings.lunch == true %}lunch_category_wrapper{% endif %}
              {% if block.settings.dinner == true %}dinner_category_wrapper{% endif %}
            ">
          {% else %}
            </div>
            <div class="cafemenu_category_wrapper {{block.settings.category_handle}}
              {% if block.settings.breakfast == true %}breakfast_category_wrapper{% endif %}
              {% if block.settings.lunch == true %}lunch_category_wrapper{% endif %}
              {% if block.settings.dinner == true %}dinner_category_wrapper{% endif %}
            ">
          {% endif %}

          <h3 class="cafemenu_category 
              {% if block.settings.breakfast == true %}breakfast_category{% endif %}
              {% if block.settings.lunch == true %}lunch_category{% endif %}
              {% if block.settings.dinner == true %}dinner_category_wrapper{% endif %}
           ">
            {{ block.settings.category_title }}
          </h3>
        {% elsif block.type == 'product' %}
            <div class="cafemenu_product {{block.settings.category_select}}_product {{block.settings.product_time}}_product {{block.settings.category_select}}_{{block.settings.product_time}}_product">
              <div class="cafemenu_product_url" >
                {% if block.settings.product_image != blank %}
                    <img src="{{ block.settings.product_image | img_url: 'master' }}">
                {% else %}
                    <img src="//cdn.shopify.com/s/images/admin/no-image-large.gif">
                {% endif %}
                <div class="product_content">
                  <div class="product_content-main">
                    <div class="product_title">
                      <div class="product_title_wrapper">
                        <h4>{{ block.settings.product_title }}</h4> 
                      </div>
                      {% if block.settings.product_mark != blank %}
                      <span class="product_mark" style="background-color: {{ block.settings.mark_color }}">{{ block.settings.product_mark }}</span>
                      {% endif %}
                      {% if block.settings.extra_description != blank %}
                      <span class="product_extra_description">{{ block.settings.extra_title }}</span>
                      {% endif %} 
                    </div>
                    <div class="product_description">{{ block.settings.product_description }}</div>
                  </div>
                  {% if block.settings.subprice != true %}
                  <h5 class="product_price">{{ block.settings.product_price }}</h5>
                  {% endif %}
                </div>
              </div>
            </div>
        {% endif %}
      {% endfor %}
      </div>
    </div>
  {% comment %}
    <div class="cafemenu_go">
      <a><span>Grab and go</span><img src="https://cdn.shopify.com/s/files/1/0277/5518/4198/files/Vector_1_0e8b61f8-ab33-4a2d-8755-4b378931745d.png?v=1617932774"></a>
    </div>
     {% endcomment %}
  </div>
</div>

<script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>

