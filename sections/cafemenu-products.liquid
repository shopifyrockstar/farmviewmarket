{% schema %}
{
  "name": "Cafe Menu Products",
  "class": "cafe-menu-products",
  "settings": [
  ],
  "blocks": [
  	{
      "name": "Category",
      "type": "product_category",
      "settings": [
        {
          "type": "text",
          "id": "category_title",
          "label": "Category title"
        },
        {
          "type": "text",
          "id": "category_handle",
          "label": "Category Handle"
        },
		{
          "type": "image_picker",
          "id": "category_image",
          "label": "Category Image"
        },
        {
          "type": "richtext",
          "id": "category_description",
          "label": "Category Description"
        },
        {
           "type": "checkbox",
           "id": "breakfast",
           "label": "Breakfast",
           "default": false
        },
        {
           "type": "checkbox",
           "id": "lunch",
           "label": "Lunch",
           "default": false
        },
		{
           "type": "checkbox",
           "id": "dinner",
           "label": "Dinner",
           "default": false
        }	
      ]
    },
  	{
      "name": "Product",
      "type": "product",
      "settings": [
        {
          "type": "text",
          "id": "product_title",
          "label": "Product title"
        },
		{
          "type": "image_picker",
          "id": "product_image",
          "label": "Product Image"
        },
        {
          "type": "text",
          "id": "product_mark",
          "label": "Product Mark"
        },
        {
           "type": "color",
           "id": "mark_color",
           "label": "Background Mark color",
           "default": "#BAC433"
        },
        {
          "type": "text",
          "id": "extra_title",
          "label": "Extra Title"
        },
        {
          "type": "richtext",
          "id": "product_description",
          "label": "Product Description"
        },
        {
          "type": "text",
          "id": "product_price",
          "label": "Product Price"
        },
		 {
           "type": "checkbox",
           "id": "subprice",
           "label": "Has Subprice",
           "default": false
        },	
        {
           "type": "select",
           "id": "category_select",
           "label": "Product Category",
           "options": [
              { "value": "entrees", "label": "Entrees"},
              { "value": "sandwiches", "label": "Sandwiches"},
              { "value": "salads", "label": "Salads"},
			  { "value": "a_la_carte", "label": "A La Carte"},
			  { "value": "farm_kids", "label": "Farm Kids"},
			  { "value": "desserts", "label": "Desserts"},
			  { "value": "beverages", "label": "Beverages"}
           ],
           "default": "entrees"
        },
        {
           "type": "select",
           "id": "product_time",
           "label": "Time",
           "options": [
              { "value": "breakfast", "label": "Breakfast"},
              { "value": "lunch", "label": "Lunch"},
			  { "value": "dinner", "label": "Dinner"}
           ],
           "default": "lunch"
        }
        
      ]
    }
  ]
}
{% endschema %}



