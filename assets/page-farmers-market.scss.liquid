.template-page-farmers-market {
  .main-content {
    padding-top: 0;
  }
  
  .insta-feed {
    display: none;
  }
}

.farmers-market-hero {
  background-image: url(https://cdn.shopify.com/s/files/1/0277/5518/4198/files/farmers-market-hero-full.jpg?v=1614668861);
  background-size: cover;
  background-position: center center;
  background-repeat: no-repeat;
  padding: 72px 16px;
  
  @media only screen and (min-width: 768px) {
    padding: 56px 16px;
    min-height: 592px;
  }
  
  @media only screen and (min-width: 1024px) {
    padding: 120px 80px 44px 80px;
  }
}

.farmers-market-hero-title {
  font-size: 51px;
  line-height: 56px;
  font-weight: 800;
  color: #ffffff;
  margin-bottom: 8px;
  
  @media only screen and (min-width: 1024px) {
    font-size: 72px;
    line-height: 72px;
    margin-bottom: 16px;
  }
}

.farmers-market-hero-sub {
  font-size: 20px;
  line-height: 32px;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 0;
  max-width: 750px;
}

.farmers-market-page-wrapper {
  padding-top: 80px;
  padding-bottom: 60px;
  background-repeat: no-repeat, no-repeat;
  background-position: 0% -5%, 100% 90%;
  background-image: url(https://cdn.shopify.com/s/files/1/0277/5518/4198/files/tomato2_1_5b7897a3-e2fe-4ee3-aa96-a7a8cd84bdd0.png?v=1617552579), url(https://cdn.shopify.com/s/files/1/0277/5518/4198/files/farmers-market-tomato-center-right.png?v=1614667276);
  background-size: 262px 149px, 212px 305px;
  
  @media only screen and (min-width: 1024px) {
    padding-top: 120px;
    background-size: 262px 149px, 212px 305px;
    background-position: left top, right 35%;
  }
}

.farmers-market-page-container {
  
  @media only screen and (min-width: 1024px) {
    display: flex;
    align-items: flex-start;
  }
}

.farmers-market-page-left {
  margin-bottom: 56px;
  
  @media only screen and (min-width: 1024px) {
    width: 45%;
    margin-bottom: 0;
  }
}

.farmers-market-page-right {
  
  @media only screen and (min-width: 1024px) {
    width: 55%;
  }
}

.farmers-market-details-text {
  margin-bottom: 40px;
  
  @media only screen and (min-width: 1024px) {
    padding-right: 5rem;
    margin-bottom: 91px;
  }
}

.farmers-market-details-title {
  font-size: 40px;
  line-height: 42px;
  font-weight: 700;
  margin-bottom: 8px;
}

.farmers-market-details-message {
  font-size: 16px;
  line-height: 28px;
}

.farmers-market-details-image {
  display: block;
  margin: 0;
  
  img {
    width: 100%;
  }
  
  @media only screen and (min-width: 1024px) {
    transform: translateX(-5rem);
  }
}

.farmers-market-events-title {
  font-size: 40px;
  line-height: 42px;
  font-weight: 700;
  margin-bottom: 24px;
}

.farmers-market-question {
  padding-left: 24px;
  border-left: 2px solid #242721;
  margin-bottom: 32px;
}

.farmers-market-question-title {
  font-size: 20px;
  line-height: 24px;
  font-weight: 700;
  margin-bottom: 8px;
}

.farmers-market-question-message {
  font-size: 16px;
  line-height: 28px;
}

.farmers-market-question-btn {
  border-radius: 999px;
  padding: 4px 16px !important;
}

.farmers-market-events-list {
  margin-bottom: 72px;
  
  @media only screen and (min-width: 1024px) {
    margin-bottom: 136px;
  }
  @media only screen and (max-width: 1024px) {
    margin-bottom: 56px;
  }
}

.farmers-market-events-list-item {
  display: flex;
  align-items: center;
}

.farmers-market-events-list-item-image {
  width: 56px;
  flex-basis: 56px;
  margin-right: 16px;
  flex-shrink: 0;
}

.farmers-market-events-list-item-text {
  flex-grow: 1;
}

.farmers-market-events-list-item-arrow {
  flex-shrink: 0;
  padding: 0 32px;
}

.farmers-market-events-list-item-title {
  font-size: 16px;
  line-height: 28px;
  font-weight: 600;
  margin-bottom: 0;
}
  
.farmers-market-events-list-item-date {
  font-size: 16px;
  line-height: 28px;
  margin-bottom: 0;
}

.farmers-market-events-hr {
  border: none;
  margin: 16px 0;
  height: 1px;
  background: linear-gradient(90deg, rgba(189, 195, 184, 0) 0%, #BDC3B8 17.19%, #BDC3B8 83.85%, rgba(189, 195, 184, 0) 100%);
}

.farmers-market-map-image-wrapper {
  display: inline-block;
  margin-top: 56px;
  
  @media only screen and (min-width: 1024px) {
    margin-top: 65px;
  }
   @media only screen and (max-width: 1024px) {
    margin-top: 5px;
  }
}

.farmers-market-map-image {
  
  img {
    display: block;
    width: 100%;
  }
}

.farmers-market-link {
  font-weight: bold;
  color: #eea452;
  text-decoration: none;
  
  &:not([disabled]):hover,
  &:focus {
    color: #e98c24
  }
}