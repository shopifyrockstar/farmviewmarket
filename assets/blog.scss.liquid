.template-blog {
  .main-content {
    padding-top: 0;
  }
  
  .insta-feed {
    display: none;
  }
}

.blog-title {
  font-size: 51px;
  line-height: 56px;
  font-weight: 800;
  margin-top: 56px;
  margin-bottom: 32px;
  
  @media only screen and (min-width: 768px) {
    font-size: 72px;
    line-height: 72px;
    margin-bottom: 40px;
  }
}

.blog-first-container {
  position: relative;
  width: 100%;
  min-height: 598px;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center center;
  margin-bottom: 32px;
  
  @media only screen and (min-width: 768px) {
    min-height: 538px;
    margin-bottom: 80px;
  }
}

.blog-first-inner {
  padding: 32px 16px;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: flex-end;
  background: linear-gradient(90deg, rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0.2) 100%);
  
  @media only screen and (min-width: 768px) {
    padding: 48px;
    background: linear-gradient(31.99deg, rgba(0, 0, 0, 0.41) 29.93%, rgba(0, 0, 0, 0) 67.11%);
  }
}

.blog-first-content {
  max-width: 620px;
}

.blog-first-date {
  font-size: 13px;
  line-height: 22px;
  color: #fff;
  margin-bottom: 8px;
}

.blog-first-title {
  font-size: 40px;
  font-weight: 700;
  line-height: 42px;
  color: #fff;
  margin-bottom: 8px;
}

.blog-first-excerpt {
  font-size: 13px;
  font-weight: 700;
  line-height: 22px;
  color: #fff;
  margin-bottom: 32px;
}

.blog-first-btn {
  font-size: 14px;
  font-weight: 600;
  line-height: 24px;
  padding: 12px 24px;
  background-color: #EEA452;
  border-radius: 99px;
  display: inline-block;
}

.blog-grid {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.blog-grid-item {
  width: 100%;
  flex-basis: 100%;
  margin-bottom: 40px;
  
  @media only screen and (min-width: 768px) {
    width: 22%;
    flex-basis: 22%;
    margin-right: 4%;
    margin-bottom: 80px;
    
    &:nth-child(3) {
      margin-right: 0;
    }

    &:nth-child(7) {
      margin-right: 0;
    }

    &:nth-child(10) {
      margin-right: 0;
    }
  }
}

.blog-grid-item-double {
  width: 100%;
  flex-basis: 100%;
  margin-bottom: 40px;
  
  .blog-first-container {
    min-height: 552px;
  }
  
  @media only screen and (min-width: 768px) {
    width: 48%;
    flex-basis: 48%;
    margin-bottom: 80px;
    
    &:nth-child(8) {
      margin-right: 4%;
    }
    
    .blog-first-container {
      min-height: 0;
      height: 100%
    }
  }
}

.blog-grid-item-image {
  margin-bottom: 16px;
  
  img {
    display: block;
    width: 100%;
    margin: 0;
  }
}

.blog-grid-item-date {
  font-size: 13px;
  line-height: 22px;
  color: #8A9381;
  margin-bottom: 8px;
}

.blog-grid-item-title {
  font-size: 20px;
  font-weight: 700;
  line-height: 24px;
  margin-bottom: 8px;
  min-height: 50px;
}

.blog-grid-item-excerpt {
  font-size: 13px;
  line-height: 22px;
  margin-bottom: 16px;
}

.blog-grid-item-btn {
  font-size: 14px;
  font-weight: 600;
  line-height: 24px;
  padding: 12px 24px;
  background-color: #EEA452;
  border-radius: 99px;
  display: inline-block;
}

