.template-article {
  .main-content {
    padding-top: 0;
  }
  
  .insta-feed {
    display: none;
  }
}

.article-hero {
  position: relative;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center center;
  margin-bottom: 80px;
  min-height: 740px;
  
  @media only screen and (min-width: 768px) {
    min-height: 776px;
    margin-bottom: 120px;
  }
}

.article-hero-inner {
  display: flex;
  align-items: flex-start;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 56px 16px;
  background: linear-gradient(90deg, rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0) 82.4%);
  
  @media only screen and (min-width: 768px) {
    align-items: center;
    min-height: 776px;
    padding: 80px;
  }
}

.article-hero-title {
  font-size: 51px;
  line-height: 56px;
  font-weight: 800;
  color: #fff;
  max-width: 760px;
  margin-bottom: 24px;
  
  @media only screen and (min-width: 768px) {
    font-size: 72px;
    line-height: 72px;
  }
}

.article-share-container {
  display: flex;
  align-items: center;
}

.article-share-icon {
  display: block;
  margin-right: 16px;
  
  svg {
    display: block;
  }
  
  &:last-of-type {
    margin-right: 27px;
  }
}

.article-share-message {
  display: flex;
  align-items: center;
  
  svg {
    display: block;
    margin-right: 11px;
  }
  
  p {
    margin-bottom: 0;
    font-weight: 600;
    line-height: 24px;
    color: #fff;
  }
}

.article-content-wrapper {
  max-width: 840px;
  margin: 0 auto;
}

.article-content {
  font-size: 16px;
  font-weight: 400;
  line-height: 28px;
  margin-bottom: 16px;
  color: #585F51;
  
  h1, h2, h3 {
    font-size: 40px;
    font-weight: 800;
    line-height: 42px;
    margin-bottom: 16px;
    color: #242721;
    
    @media only screen and (min-width: 768px) {
      font-size: 51px;
      line-height: 56px;
    }
  }
  
  h4, h5, h6 {
    font-size: 32px;
    font-weight: 800;
    line-height: 36px;
    margin-bottom: 16px;
    color: #242721;
  }
  
  p {
    font-size: 16px;
    font-weight: 400;
    line-height: 28px;
    margin-bottom: 16px;
    color: #585F51;
  }
  
  img {
    margin: 80px 0;
    width: 100%;
    max-height: 450px;
    object-fit: cover;
    display: block;
  }
  
  a {
    font-weight: bold;
    text-decoration: none;
/*     color: #EEA452; */
  }
}

.article-footer {
  display: flex;
  align-items: center;
  margin: 60px 0;
}

.article-footer-seperator {
  flex-grow: 1;
}

.article-footer-link {
  display: flex;
  align-items: center;
  flex-shrink: 0;
  
  :first-child {
    margin-right: 17px;
  }
}

.article-footer-text {
  font-size: 14px;
  font-weight: 600;
  line-height: 24px;
  margin-bottom: 0;
}