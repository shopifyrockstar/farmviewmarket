.template-page-grass-fed-beef-101 {
  .main-content {
    padding-top: 0;
  }
}

.beef101-page-width {
  max-width: 90rem;
  margin: 0 auto;
}

.beef101-hero {
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center center;
  padding: 56px 16px 96px 16px;
  margin-bottom: 68px;
  background-image: url(https://cdn.shopify.com/s/files/1/0277/5518/4198/files/grass-fed-beef-101-hero-mobile.jpg?v=1614836305);
  
  @media only screen and (min-width: 768px) {
    background-image: url(https://cdn.shopify.com/s/files/1/0277/5518/4198/files/beef101-hero.jpg?v=1614753937);
    padding: 120px 80px;
    min-height: 572px;
    margin-bottom: 56px;
  }
}

.beef101-hero-title {
  color: #fff;
  font-size: 51px;
  line-height: 56px;
  margin-bottom: 10px;
  font-weight: 800;
  
  @media only screen and (min-width: 768px) {
    font-size: 72px;
    line-height: 72px;
    margin-bottom: 16px;
  }
}

.beef101-hero-subtitle {
  color: #fff;
  font-size: 32px;
  line-height: 36px;
  margin-bottom: 10px;
  font-weight: 600;
  
  @media only screen and (min-width: 768px) {
    margin-bottom: 16px;
  }
}

.beef101-hero-message {
  color: #fff;
  font-size: 20px;
  line-height: 32px;
  font-weight: 700;
  max-width: 725px;
  margin-bottom: 0;
}

.beef101-section {
  display: flex;
  flex-wrap: wrap;
  background-repeat: no-repeat;
  background-size: 260px 300px;
  margin-bottom: 40px;
  
  @media only screen and (min-width: 768px) {
    flex-wrap: nowrap;
    margin-bottom: 0;
  }
  
  &:nth-child(odd) {
    flex-direction: row;
    background-position: left bottom;
  }
  
  &:nth-child(even) {
    flex-direction: row-reverse;
    background-position: right bottom;
  }
  
  &.its-healthy {
    background-image: url(https://cdn.shopify.com/s/files/1/0277/5518/4198/files/its-healthy-mobile-bg.png?v=1614836861);
    
    @media only screen and (min-width: 768px) {
      background-image: url(https://cdn.shopify.com/s/files/1/0277/5518/4198/files/beef101-its-healthy-bg.png?v=1614752160);
    }
  }
  
  &.its-flavorful {
    background-image: url(https://cdn.shopify.com/s/files/1/0277/5518/4198/files/its-flavorful-mobile-bg.png?v=1614836862);
    
    @media only screen and (min-width: 768px) {
      background-image: url(https://cdn.shopify.com/s/files/1/0277/5518/4198/files/beef101-its-flavorful-bg.png?v=1614753617);
    }
  }
  
  &.its-humane {
    background-image: url(https://cdn.shopify.com/s/files/1/0277/5518/4198/files/its-humane-mobile-bg.png?v=1614836883);
    
    @media only screen and (min-width: 768px) {
      background-image: url(https://cdn.shopify.com/s/files/1/0277/5518/4198/files/beef101-its-humane-bg.png?v=1614753722);
    }
  }
  
  &.its-sustainable {
    background-image: url(https://cdn.shopify.com/s/files/1/0277/5518/4198/files/beef101-its-sustainable-bg.png?v=1614753875);
    
    @media only screen and (min-width: 768px) {
      background-image: url(https://cdn.shopify.com/s/files/1/0277/5518/4198/files/beef101-its-sustainable-bg.png?v=1614753875);
    }
  }
}

.beef101-section-content {
  width: 100%;
  flex-basis: 100%;
  display: flex;
  align-items: center;
  padding: 16px;
  
  @media only screen and (min-width: 768px) {
    width: 50%;
    flex-basis: 50%;
    padding: 40px;
  }
}

.beef101-section-image {
  width: 100%;
  flex-basis: 100%;
  padding: 16px 16px 104px 16px;
  
  @media only screen and (min-width: 768px) {
    width: 50%;
    flex-basis: 50%;
    padding: 0 0 56px 0;
  }
  
  img {
    display: block;
    width: 100%;
    margin: 0;
  }
}

.beef101-section-content-inner {
  
  @media only screen and (min-width: 768px) {
    max-width: 560px;
    margin: 0 auto;
  }
}

.beef101-section-content-title {
  position: relative;
  font-size: 40px;
  line-height: 42px;
  font-weight: 700;
  margin-bottom: 8px;
  transform: translate3d(0,0,0);
  
  @media only screen and (min-width: 768px) {
    line-height: 56px;
    font-weight: 800;
  }
  
  img {
    position: absolute;
    bottom: calc(100% - 20px);
    left: -10px;
    z-index: -1;
  }
}

.beef101-section-content-message {
  font-size: 13px;
  line-height: 22px;
  margin-bottom: 0;
}

.beef101-collection {
  margin-bottom: 48px;
  
  @media only screen and (min-width: 768px) {
    padding: 0 60px;
    margin-top: 64px;
    margin-bottom: 156px;
  }
}

.beef101-collection-title {
  font-size: 40px;
  line-height: 42px;
  font-weight: 700;
  text-align: center;
  margin-bottom: 24px;
  
  @media only screen and (min-width: 768px) {
    font-size: 51px;
    line-height: 56px;
    font-weight: 800;
    margin-bottom: 16px;
  }
}

.beef101-collection-message {
  font-size: 20px;
  line-height: 32px;
  margin-bottom: 0;
  text-align: center;
}